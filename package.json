{
  "name": "badge",
  "version": "0.1.0",
  "description": "A collection of HTTPS endpoints designed to provide badge metadata",
  "keywords": [
    "badge",
    "badge-generator",
    "generator",
    "service",
    "svg",
    "typescript"
  ],
  "homepage": "https://github.com/ajtorres9/badge#readme",
  "bugs": "https://github.com/ajtorres9/badge/issues",
  "license": "MIT",
  "author": "Andrew Torres <andrew.jonathan.torres@gmail.com> (https://andrewjtorr.es)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ajtorres9/badge.git"
  },
  "scripts": {
    "build": "npm-run-all --parallel \"build:*\"",
    "build:workspaces": "lerna run --stream build",
    "clean": "npm-run-all --parallel \"clean:*\"",
    "clean:files": "del *.log*",
    "clean:workspaces": "lerna run --stream clean",
    "hook:pre-commit": "lint-staged",
    "lint": "npm-run-all --parallel \"lint:*\"",
    "lint:files": "prettylint \"**/*.{json,md,yml}\"",
    "lint:scripts": "eslint \"**/*.js\"",
    "lint:workspaces": "lerna run --stream lint",
    "prepare": "husky install",
    "test": "npm-run-all --parallel \"test:*\"",
    "test:workspaces": "lerna run --stream test"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@jest/globals": "^27.0.3",
    "@types/aws-lambda": "^8.10.76",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "@typescript-eslint/typescript-estree": "^4.22.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-unicorn": "^33.0.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^27.0.3",
    "jest-config": "^27.0.4",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "msw": "^0.29.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.1",
    "prettylint": "^1.0.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.3.2",
    "typescript-eslint-language-service": "^4.1.4"
  },
  "engines": {
    "node": ">=14.16",
    "yarn": ">=1.22"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "!(packages/**)*.js": [
      "eslint --fix"
    ],
    "!(packages/**)*.{json,md,yml}": [
      "prettylint --fix"
    ]
  }
}
